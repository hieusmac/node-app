<%- include("header.ejs") %>

<div class="bg-white dark:bg-gray-900 py-24 sm:py-32 min-h-screen">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="flex flex-row mx-auto lg:mx-0 justify-between border-b pb-10 sm:pb-16 mb-10 sm:mb-16">
            <div class="basis-1/3 max-w-2xl">
                <h2 class="text-4xl font-semibold tracking-tight text-pretty text-gray-600 dark:text-white sm:text-5xl">My Blogs</h2>
                <p class="mt-2 text-lg/8 text-gray-600 dark:text-gray-300">Writing your blogs</p>
            </div>
            <div class="basis-2/3 flex justify-center">
                <form action="/submit" method="POST">
                    <label class="grid grid-cols-3 gap-4 h-28 sm:h-16 w-32 sm:w-96">
                        <input type="submit" value="Post" class="text-gray-100 self-start bg-blue-500 rounded-3xl text-center">
                        <input type="text" name="blogTitle" value="Untitled" class="text-gray-600 dark:text-white outline-1 outline-gray-400 rounded-3xl text-center col-span-2">
                        <input type="text" name="blogText" placeholder="Sending post" class="col-span-3 row-span-5 text-center text-gray-600 dark:text-white  rounded-3xl outline-1 outline-gray-400">
                    </label>
                </form>
            </div>
        </div>
        <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-3">
            <%- include("section.ejs") %>
        </div>
    </div>
</div>

</div>
</body>
</html>
<article class="flex flex-col items-start justify-between max-w-xl ring-1 ring-gray-300 dark:ring-gray-700 rounded-2xl p-4">
    <div class="flex items-center gap-x-4 text-xs">
        <time class="text-gray-800 dark:text-gray-400" datetime="<%= new Date().toISOString() %>">
            <%= new Date().toLocaleDateString("en-AU", {
                year: "numeric",
                month: "short",
                day: "numeric",
                weekday: "short",
            }) %>
        </time>
    </div>
    <div class="group relative grow">
        <h3 class="mt-3 text-lg/6 font-semibold bg-gray-50 dark:bg-gray-900 dark:text-white group-hover:text-gray-800 group-hover:dark:text-gray-400">
            <%= blogTitle %>
        </h3>
        <p class="mt-5 line-clamp-3 text-sm text-gray-800 dark:text-gray-400"> <%= blogText %> </p>
    </div>
    <div class="relative mt-8 flex items-center gap-x-4 justify-self-end">
        <img src="eye-with-futuristic-digital-iris.jpg" alt="" class="size-10 rounded-full bg-gray-800" />
        <div class="text-sm/6">
            <p class="font-semibold text-black dark:text-white">
                <a href="#">
                    <span class="absolute inset-0"></span>
                    Hieu Joestar
                </a>
            </p>
            <p class="text-gray-800 dark:text-gray-400">Founder</p>
        </div>
    </div>
</article>